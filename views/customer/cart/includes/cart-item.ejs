<article>
  <h3><%= item.product.name %></h3>
  <div class="cart-item-info">
   
      <label for="quantity">Quantity</label>
      <div>
        <button>-</button>
        <input
          type="number"
          id="quantity"
          value="<%= item.quantity %>"
          min="0"
          step="1"
          required
        />
        <button>+</button>
      
    </div>
    <p>
      <%= item.totalPrice.toFixed(2) %> &euro;<span
        >(<%= item.product.price %> &euro; per por.)</span
      >
    </p>
  </div>
</article>
