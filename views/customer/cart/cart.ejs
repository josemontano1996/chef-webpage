<%- include("../../shared/head", {pageTitle: "Cart"}) %>
<link rel="stylesheet" href="/css/cart.css">
</head>
<body>
    <%- include("../../shared/header") %>
<main>
    <h3>Your cart</h3>
     <ul id="cart-items">
        <% for (const cartItem of locals.cart.items){ %>
        <li id="cart-item"><%- include("includes/cart-item", {item: cartItem}) %></li>
        <% } %>
    </ul>
     <div id="cart-total"> Total: <%= locals.cart.totalPrice %> &euro; </div>
     <button class="button">Make order</button>
</main>
<%- include("../../shared/footer") %>

