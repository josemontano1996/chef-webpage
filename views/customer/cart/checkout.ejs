<%- include("../../shared/head", {pageTitle: "Checkout"}) %>
<link rel="stylesheet" href="/css/forms.css">
</head>
<body>
    <%- include("../../shared/header") %>
<main>

     <section>
        <h3>Your delivery data</h3>
        <form action="/orders" method="POST">
      <p>
        <label for="fullname">Full Name</label>
        <input
          type="text"
          name="fullname"
          id="fullname"
          value="<%= user.name %>"
          required
        />
      </p>
      <p>
        <label for="phone">Contact Phone</label>
        <input
          type="tel"
          name="phone"
          id="phone"
          value="<%=user.phone%>"
          required
        />
      </p>
      <p>
        <label for="address">Address</label>
        <input
          type="text"
          name="street"
          id="street"
          value="<%=user.address.street%>"
          required
        />
      </p>
      <p>
        <label for="PLZ">PLZ</label>
        <input
          type="number"
          name="postal"
          id="postal"
          minlength="5"
          maxlength="5"
          value="<%=user.address.postal%>"
          required
        />
      </p>
      <p>
        <label for="city">City</label>
        <input
          type="text"
          name="city"
          id="city"
          value="<%=user.address.city%>"
          required
        />
      </p>
      <p>
        <label for="country">Country</label>
        <input
          type="text"
          name="country"
          id="contry"
          value="<%=user.address.country%>"
          required
        />
      </p>
      <p>
        <label for="deliveryDate">Delivery date</label>
        <input
          type="datetime-local"
          name="deliveryDate"
          id="deliveryDate"
          required
        />
      </p>
      <p>
        <label for="pickup">If you want to pick-up your order please select this field</label>
        <input type="checkbox" name="pickup" id="pickup" value="false"/>
      </p>
      <p>Total order price: <span><%= locals.cart.totalPrice %></span> &euro;</p>
            <button class="button">Place order</button>
        </form>
     </section>
</main>
<%- include("../../shared/footer") %>

