<%- include("../../shared/head", {pageTitle: "Sign Up"}) %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/auth/auth.css" />
<link rel="stylesheet" href="/css/auth/signup.css" /> 
<script src="/scripts/auth.js" defer></script>
</head>
<body>
    <%- include("../../shared/header") %>
<main>
  <% if (inputData.errorMessage) { %>
  <section class="alert">
    <p><%= inputData.errorMessage %></p>
  </section>
  <% } %>
  <section id="signup">
    <h2>Create new Account</h2>
    <form action="/signup" method="POST" id="signup-form">
      <p>
        <label for="email">E-mail</label>
        <input
          type="email"
          name="email"
          id="email"
          value="<%= inputData.email %>"
          required
        />
      </p>
      <p>
        <label for="confirm-email">Confirm Email</label>
        <input
          type="email"
          name="confirm-email"
          id="confirm-email"
          value="<%= inputData.confirmEmail %>"
          required
        />
      </p>
      <p>
        <label for="password">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          value="<%= inputData.password %>"
          required
          minlength="8"
        />
      </p>
      <p>
        <label for="confirm-password">Confirm Password</label>
        <input
          type="password"
          name="confirm-password"
          id="confirm-password"
          value="<%= inputData.confirmPassword %>"
          required
          minlength="8"
        />
      </p>
      <h2>Personal Data</h2>
      <p>
        <label for="fullname">Full Name</label>
        <input
          type="text"
          name="fullname"
          id="fullname"
          placeholder="Josep Maximilian"
          value="<%= inputData.name %>"
          required
        />
      </p>
      <p>
        <label for="phone">Contact Phone</label>
        <input
          type="tel"
          name="phone"
          id="phone"
          placeholder="+352 5263942315"
          value="<%= inputData.phone %>"
          required
        />
      </p>
      <p>
        <label for="address">Address</label>
        <input
          type="text"
          name="street"
          id="street"
          placeholder="Street name and Number"
          value="<%= inputData.street %>"
          required
        />
      </p>
      <p>
        <label for="PLZ">PLZ</label>
        <input
          type="number"
          name="postal"
          id="postal"
          placeholder="98554"
          minlength="5"
          maxlength="5"
          value="<%= inputData.postal %>"
          required
        />
      </p>
      <p>
        <label for="city">City</label>
        <input
          type="text"
          name="city"
          id="city"
          placeholder="Echternach"
          value="<%= inputData.city %>"
          required
        />
      </p>
      <p>
        <label for="country">Country</label>
        <input
          type="text"
          name="country"
          id="country"
          placeholder="Luxembourg"
          value="<%= inputData.country %>"
          required
        />
      </p>
      <button class="button-alt">Submit</button>
    </form>
  </section>
  <section id="login">
    <h2>Log in</h2>
    <form action="/login" method="POST" id="login-form">
      <p>
        <label for="email">Email</label>
        <input type="text" name="email" id="email" required />
      </p>
      <p>
        <label for="password">Password</label>
        <input type="password" name="password" id="password" required />
      </p>
      <button class="button-alt">Log in</button>
    </form>
  </section>
</main>
<%- include("../../shared/footer") %>