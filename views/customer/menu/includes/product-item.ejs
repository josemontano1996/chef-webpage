<article class="product-item">
  <h4><%= product.name %></h4>
  <p><%= product.description %></p>
  <% if(product.minQuantity) { %>
  <p><%= product.minQuantity %></p>
  <% } %>
  <p class="price"><%= product.price %> &euro; </p>
  <button class="button" id="product-item-button" data-productid="<%= product.id %>" data-csrf="<%= locals.csrfToken %>">Add to cart</button>
  </div>
</article>
