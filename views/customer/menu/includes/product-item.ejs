<article class="product-item">
  <div>
    <h4><%= product.name %></h4>
    <img crossorigin="anonymous" src="https://res.cloudinary.com/dfupfbnez/image/upload/v1683815113/ingrid-chef-webpage/sopa-pescado_cpxh3s.jpg" alt="">
    <p class="description"><%= product.description %></p>
    <p class="allergens">Allergens: Eggs, Dairy, Nuts.</p>
    <% if(product.minQuantity) { %>
    <p>Min. <%= product.minQuantity %> uds.</p>
    <% } %>
    <div>
    <p class="price"><%= product.price %> &euro; <span class="price-span">per u.</span> </p>
    <form class="add-item-form">
      <input type="hidden" name="productId" value="<%= product.id %>">
      <input type="hidden" name= "csrf" value="<%= locals.csrfToken %>">
      <label for="quantity">Quantity</label>
      <input type="number" name= "quantity" id="quantity" min="<%=product.minQuantity%>" placeholder="0">
    <button class="btn">Add to cart</button>
  </form>
  </div>
</article>
