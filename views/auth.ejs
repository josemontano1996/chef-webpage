<%- include('./includes/head', {pageTitle: 'Authentication'}) %>
<link rel="stylesheet" href="/css/about.css" />
</head>
<body>
    <%- include('./includes/header') %>
<main id="about-section">
    <div class="flexbox-container">
        <form action="/auth" method="POST">
            <h2>Create new Account</h2>
            <p>
                <label for="email">E-mail</label>
                <input type="email" name="email" id="email" required>
            </p>
            <p>
               <label for="confirm-email">Confirm Email</label>
                <input type="email" name="confirm-email" id="confirm-email" required> 
            </p><p>
                <label for="password">Password</label>
                <input type="password" name="password" id="password" required minlength="8">
            </p><p>
                <label for="confirm-password">Confirm Password</label>
                <input type="password" name="confirm-password" id="confirm-password" required minlength="8">
            </p>
            <h3>Personal Data</h3>
            <label for="fullname">Full Name</label>
            <input type="text" name="fullname" id="fullname" required>
            <label for="address">Address</label>
            <input type="text" name="street" id="street" placeholder="Street name and Number" required>
            <label for="PLZ">PLZ</label>
            <input type="number" name="postal" id="postal" required>
            <label for="city">City</label>
            <input type="text" name="city" id="city" required>
            <label for="country">Country</label>
            <input type="text" name="country" id="contry" required>

            <button>Submit</button>
       </form>

        <form action="/auth" method="GET">
            <h2>Log in</h2>
            <label for="email">Email</label>
            <input type="text" name="email" id="email" required>
            <label for="password">Password</label>
            <input type="text" name="password" id="password" required>
            <button>Log in</button>
      </div>
    </form>
</main>
<%- include('./includes/footer') %>
